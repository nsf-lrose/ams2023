//  {
//    name = "PWNE",
//    latitude = 40.8712,
//    longitude = -104.714,
//    altitudeKm = 1.688
//  }
};

//======================================================================
//
// DATA OUTPUT.
//
//======================================================================
 
///////////// output_url //////////////////////////////
//
// Directory for output data.
//
//
// Type: string
//

output_url = "$(BASE_DIR)/data/echo/sounding/spdb";

///////////// valid_period_secs ///////////////////////
//
// Valid age for sounding data.
//
// How long until the next sounding is expected?.
//
//
// Type: int
//

valid_period_secs = 43200;

