//  }
//  ,
//  {
//    name = "CHILL",
//    latitude = 40.4464,
//    longitude = -104.637,
//    altitudeKm = 1.432
//  }
//  ,
//  {
//    name = "KFTG",
//    latitude = 39.7866,
//    longitude = -104.546,
//    altitudeKm = 1.709
//  }
//  ,
//  {
//    name = "KCYS",
//    latitude = 41.1519,
//    longitude = -104.806,
//    altitudeKm = 1.886
//  }
//  ,
//  {
//    name = "KPUX",
//    latitude = 38.4595,
//    longitude = -104.181,
//    altitudeKm = 1.634
//  }
//  ,
//  {
//    name = "KGLD",
//    latitude = 39.3667,
//    longitude = -101.7,
//    altitudeKm = 1.131
//  }
//  ,
//  {
//    name = "KGJX",
//    latitude = 39.0622,
//    longitude = -108.213,
//    altitudeKm = 3.064
//  }
